<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pools.PoolsScheduleFragment">

    <androidx.cardview.widget.CardView style="@style/CardViewMainStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_spacer1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewHeaderStyle"
                android:text="@string/pools_schedule_header"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#DFDFDF"
                    android:gravity="center"
                    android:padding="3dp"
                    android:showDividers="end">

                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Dzień tygodnia"
                            android:ellipsize="none"
                            android:layout_width="100dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_column="2"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="100dp"
                            android:text="kadra i pracownicy AMW"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="3"
                            android:padding="3dp"
                            android:text="podchorążowie"
                            android:layout_width="100dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="4"
                            android:padding="5dp"
                            android:text="kursy"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="5"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="Grupy zorganizowane***"
                            android:textStyle="bold"
                            android:layout_width="130dp"/>
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_column="6"
                            android:padding="5dp"
                            android:layout_width="85dp"
                            android:text="Komercja (karnety i Bilety)"
                            android:textStyle="bold" />
                    </TableRow>
                    <View
                        android:id="@+id/SplitLine_hor1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#373737" />
                    <TableRow>

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:padding="5dp"
                            android:ellipsize="none"
                            android:layout_width="65dp"
                            android:text="Poniedziałek - Piątek" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="2"
                            android:padding="5dp"
                            android:text="13:00 - 15:00" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="3"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:gravity="center"
                            android:text="6:00 –  8:00; 16:00 – 18:00" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="4"
                            android:padding="5dp"
                            android:text="Brak" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="5"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:gravity="center"
                            android:text="zgodnie z osobnym Harmonogramem" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="6"
                            android:padding="5dp"
                            android:text="Brak" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:padding="5dp"
                            android:ellipsize="none"
                            android:layout_width="65dp"
                            android:text="Sobota" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="2"
                            android:padding="5dp"
                            android:text="13:00 - 15:00" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="3"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:gravity="center"
                            android:text="06:00 – 10:00 6:00 – 20:00" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="4"
                            android:padding="5dp"
                            android:text="Brak" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="5"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:gravity="center"
                            android:text="zgodnie z osobnym Harmonogramem" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="6"
                            android:padding="5dp"
                            android:text="Brak" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:padding="5dp"
                            android:ellipsize="none"
                            android:layout_width="65dp"
                            android:text="Niedziela" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="2"
                            android:padding="5dp"
                            android:text="08:00 – 10:00" />

                        <TextView
                            android:layout_column="3"
                            android:padding="5dp"
                            android:layout_width="105dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="11:00 – 13:00 15:00 – 18:00" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="4"
                            android:padding="5dp"
                            android:text="Brak" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="5"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:gravity="center"
                            android:text="zgodnie z osobnym Harmonogramem" />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_column="6"
                            android:padding="5dp"
                            android:text="Brak" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pools_schedule_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>